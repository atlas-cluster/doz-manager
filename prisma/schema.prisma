generator client {
  provider = "prisma-client"
  output   = "../features/shared/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Lecturer {
  id                    String                @id @default(cuid())
  title                 String?
  firstName             String
  secondName            String?
  lastName              String
  email                 String                @unique
  phone                 String                @unique
  type                  LecturerType
  courseLevelPreference CourseLevelPreference
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt

  // // Relations to junction tables
  // teaches               LecturerTeaches[]
  // canTeach              LecturerCanTeach[]
}

enum LecturerType {
  internal
  external
}

enum CourseLevelPreference {
  bachelor
  master
  both
}

